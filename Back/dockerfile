# Fase de construção
FROM maven:3.9.0-openjdk-17 AS builder
WORKDIR /app
COPY pom.xml ./
COPY src ./src
RUN mvn clean package -DskipTests

# Fase final
FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=builder /app/target/gerenciador_eventos-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 9000
CMD ["java", "-jar", "app.jar"]
